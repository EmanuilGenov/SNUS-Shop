@* @model SnusShop.Web.ViewModels.ProductViewModel *@
@model SnusShop.Data.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Snus Shop</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <header>
        <div class="container">
            <h1>Snus Shop</h1>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/Shop/All">Shop</a></li>
                    <li><a href="/Shop/Cart">Cart</a></li>
                    <li><a href="#">About Us</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <section class="product-details">
        <div class="container">
            <h2>@Model.Name</h2>
            <div class="product-image">
                <img src="@Model.ImageUrl" alt="@Model.Name">
            </div>
            <p>@Model.Description</p>
            <p>Price: @Model.Price.ToString("C")</p>

            <form asp-controller="Shop" asp-action="AddToCart" method="post">
                <input type="hidden" name="productId" value="@Model.Id" />
                <label for="quantity">Quantity:</label>
                <input type="number" id="quantity" name="quantity" value="1" min="1" required />
                <button type="submit" class="btn">Add to Cart</button>
            </form>
        </div>
    </section>

    <footer>
        <div class="container">
            <p>&copy; 2024 Snus Shop. All rights reserved.</p>
            <ul>
                <li><a href="#">Privacy Policy</a></li>
                <li><a href="#">Terms of Service</a></li>
                <li><a href="#">Return Policy</a></li>
            </ul>
        </div>
    </footer>
</body>
</html>
